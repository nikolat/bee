		"\0\s[5]お疲れ様でした、%(username)。\_w[1000]/
			\n\s[6]素敵な夢が訪れますように。\_w[1000]"
	}
	--
	'\-\e'
}
sys.fnc.GetTimeSlot
{
	case hour() {
	when 22-23,0-3 {'深夜'}
	when  4-11     {'朝'}
	when 12-13     {'昼'}
	when 14-17     {'日中'}
	when 18-21     {'夜'}
	others         {'error'}
	}
}
sys.fnc.Greeting
{
	case hour() {
	when  4-11     {'おはようございます'}
	when 12-17     {'こんにちは'}
	when 18-23,0-3 {'こんばんは'}
	others         {'error'}
	}
}
