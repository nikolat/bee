	if sys.fnc.IsFirstDiaryOfBirthDay() {
		if sys.fnc.IsFirstBootOfSpecialDay() {
			sys.boot.BirthDay()
			flg.LastBoot = _todayN
			return
		}
	}
	if sys.fnc.IsFirstDiaryOfSpecialDay() {
		if sys.fnc.IsFirstBootOfSpecialDay() {
			EVAL("sys.boot.%(_todayW)")
			flg.LastBoot = _todayN
